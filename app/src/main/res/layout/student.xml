<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/studentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="7dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#21409a">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/student_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginEnd="95dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/mainfont"
                android:maxWidth="200dp"
                android:text="Student Name"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/grade"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade"
                app:layout_constraintTop_toBottomOf="@id/student_Name"
                android:textColor="@color/white"
                android:fontFamily="@font/mainfont"
                android:textSize="20dp"
                android:autoSizeTextType="uniform"
                android:maxWidth="200dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                android:id="@+id/studentIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Bus"
                android:background="@drawable/button2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ot"
                android:layout_margin="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/mainfont"/>

            <Button
                android:id="@+id/studentOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/button2"
                android:fontFamily="@font/mainfont"
                android:maxWidth="100dp"
                android:text="  Out of Bus  "
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/ot"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/ot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button2"
                android:maxWidth="100dp"
                android:text="  OT / Absent  "
                android:fontFamily="@font/mainfont"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="25dp"/>
            <ImageButton
                android:id="@+id/undo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button"
                android:src="@drawable/ic_baseline_settings_backup_restore_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="23dp"/>
            <ImageButton
                android:id="@+id/undo1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button"
                android:src="@drawable/ic_baseline_settings_backup_restore_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="23dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/confirmDialogue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_margin="15dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#21409a">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you sure?"
                android:fontFamily="@font/mainfont"
                android:textColor="@color/white"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:background="@drawable/button2"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintLeft_toRightOf="@id/sure"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/No"
                android:fontFamily="@font/mainfont"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button2"
                android:text="No"
                android:fontFamily="@font/mainfont"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/Yes"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>