<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21253e"
    tools:context=".sign_In">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="-1dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#21253e"
        app:cardCornerRadius="51dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/LoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mainfont"
                android:text="Login"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="80px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/EnterBusCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/mainfont"
                android:textSize="40px"
                android:text="Enter Bus code to continue"
                app:layout_constraintTop_toBottomOf="@id/LoginText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cde"
                android:layout_marginBottom="15dp"
app:layout_constraintRight_toRightOf="parent"/>
            <EditText
                android:id="@+id/cde"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textbox"
                android:hint="Enter Code"
                android:fontFamily="@font/mainfont"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/EnterBusCode"
                android:layout_marginHorizontal="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/signIn"
                android:inputType="numberPassword"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Enter"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/cde"
                android:fontFamily="@font/mainfont"
                android:layout_marginHorizontal="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>